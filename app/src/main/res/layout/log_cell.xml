<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/grey"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon_log" />


        <TextView
            android:id="@+id/item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/item_image"
            android:text="카테고리"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_boundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/item_category"
            android:text="l"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/item_boundary"
            android:text="-"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_banbok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_category"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/item_image"
            android:textStyle="bold"
            android:text="반복:" />

        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_category"
            android:textStyle="bold"
            android:layout_marginStart="42dp"
            android:layout_toRightOf="@+id/item_image"
            android:text="-" />

        <TextView
            android:id="@+id/item_seegan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_category"
            android:layout_marginStart="92dp"
            android:layout_toRightOf="@+id/item_image"
            android:textStyle="bold"
            android:text="시간:" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_category"
            android:layout_marginStart="127dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/item_image"
            android:text="-" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>